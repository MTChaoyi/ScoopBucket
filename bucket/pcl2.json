{
    "version": "2.6.12",
    "description": "Plain Craft Launcher 2（我的世界启动器 PCL2）",
    "homepage": "https://github.com/Hex-Dragon/PCL2",
    "license": "Freeware",
    "url": "https://github.com/Hex-Dragon/PCL2/archive/refs/tags/2.6.10.zip",
    "hash": "",
    "installer": {
        "script": [
            "Expand-Archive -LiteralPath $dir\\PCL2-$version\\最新正式版.zip -DestinationPath $dir\\",
            "Remove-Item -Path $dir\\PCL2-$version -Force -Recurse",
            "if (!(Test-Path \"$persist_dir\\PCL\")) { New-Item -Path \"$dir\\PCL\" -Type Directory -Force | Out-Null }",
            "if (!(Test-Path \"$persist_dir\\.minecraft\")) { New-Item -Path \"$dir\\.minecraft\" -Type Directory -Force | Out-Null }"
        ]
    },
    "persist": [
        ".minecraft",
        "PCL"
    ],
    "shortcuts": [
        [
            "Plain Craft Launcher 2.exe",
            "PCL2"
        ]
    ],
    "bin": [
        [
            "Plain Craft Launcher 2.exe",
            "PCL2"
        ]
    ],
    "checkver": {
        "url": "https://api.github.com/repos/Hex-Dragon/PCL2/releases/latest",
        "regex": "zipball/([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Hex-Dragon/PCL2/archive/refs/tags/$version.zip"
            }
        }
    }
}
